{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ref</th>
                 <th>Nom</th>
                  <th>Description</th>
                   <th>Size</th>
                <th>Prix</th>
                 <th>Image</th>
                 <th>catalogue</th>
               
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
     
         {% if produit.catalogue == "Robe" %}

       
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.Ref }}</td>
                <td>{{ produit.Nom }}</td>
                <td>{{ produit.Description }}</td>
                <td>{{ produit.Size}}</td>
                <td>{{ produit.Prix }}</td>
                 <td>{{ produit.image }}</td>
                  <td>{{ produit.catalogue }}</td>
              
            </tr>
             {% elseif (produit.catalogue == "pull"  and  produit.catalogue != "Robe" )%}
      
             
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.Ref }}</td>
                <td>{{ produit.Nom }}</td>
                <td>{{ produit.Description }}</td>
                <td>{{ produit.Size}}</td>
                <td>{{ produit.Prix }}</td>
                 <td>{{ produit.image }}</td>
                  <td>{{ produit.catalogue }}</td>
              
            </tr>
         
             {% endif %}
        
         {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
